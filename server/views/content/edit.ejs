<!-- Renamed DETAILS into EDIT -->


<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1>Survey Editor</h1>
            <form class="form" method="post">


              <div class="form-group">
                <label for="SurveyTextField">Survey</label>
                <input type="text" class="form-control" id="SurveyTextField"
                placeholder="Survey" name="survey" value="<%= books.survey %>" required>
              </div>
              <div class="form-group">
                <label for="PurposeTextField">Purpose</label>
                <input type="text" class="form-control" id="PurposeTextField"
                placeholder="Purpose" name="purpose" value="<%= books.purpose%>"  required>
              </div>
              <div class="form-group">
                <label for="CreatorTextField">Creator</label>
                <input type="text" class="form-control" id="CreatorTextField"
                placeholder="Creator" name="creator" value="<%= books.creator %>"  required>
              </div>
              <div class="form-group">
                <label for="RatingTextField">Rating</label>
                <input type="text" class="form-control" id="RatingTextField"
                placeholder="Ratings" name="rating" value="<%= books.rating %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/content" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>