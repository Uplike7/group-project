<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1>Add a new book!</h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Survey</label>
                <input type="text" class="form-control" id="SurveyTextField"
                placeholder="Survey" name="survey" required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Purpose</label>
                <input type="text" class="form-control" id="PurposeTextField"
                placeholder="Purpose" name="purpose" required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Creator</label>
                <input type="text" class="form-control" id="CreatorTextField"
                placeholder="Creator" name="creator" required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Rating</label>
                <input type="text" class="form-control" id="RatingTextField"
                placeholder="Rating" name="rating" required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/content" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

